{
  "manifest_version": 2,
  "name": "SteamSpyEx",
  "version": "0.9",
  
  
  "content_scripts": [
    {
      "matches": [ "*://store.steampowered.com/app/*" ],
      "css":["steamspy.css"],
      "js": [ "popup.js" ]

    }
  ],

  "icons":{
    "48":"icons/steamspy.png"

  },
  
  "permissions": [
    "*://steamspy.com/*"
  ],
  "web_accessible_resources":
    [
        "icons/logo_white.png"
        
    ],

      "browser_action": {
        "default_title": "LostTime",
        "default_icon": "icons/steamspy.png"
        
    }
    
}